<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lufficc.demolightadapter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HeaderFooterActivity"
            android:label="HeaderFooterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoadMoreActivity"
            android:label="LoadMoreActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MultiItemActivity"
            android:label="MultiItemActivity"
            android:theme="@style/AppTheme.NoActionBar" />


    </application>

</manifest>